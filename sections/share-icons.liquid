{% comment %}
  Social Share Icons - Reusable Section
{% endcomment %}

<div class="product-share mt-4 text-start">
  <h5 class="mb-3">Share</h5>
  <div style="display: flex; gap: 12px; align-items: center;">

    <style>
      .share-icon {
        width: 40px;
        height: 40px;
        background-color: #001F3F;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s ease;
      }
      .share-icon:hover {
        background-color: #ba1c24;
      }
      .share-icon svg {
        width: 20px;
        height: 20px;
        fill: #fff;
      }
    </style>

    <!-- Facebook -->
    <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ product.url }}" target="_blank" aria-label="Facebook" class="share-icon">
      <svg viewBox="0 0 24 24"><path d="M22 12a10 10 0 10-11.5 9.87v-7h-2v-2.87h2v-2.2c0-2 1.2-3.1 3.04-3.1.88 0 1.8.16 1.8.16v2h-1.02c-1 0-1.3.63-1.3 1.27v1.87h2.22l-.36 2.87h-1.86v7A10 10 0 0022 12z"/></svg>
    </a>

    <!-- Instagram -->
    <a href="https://www.instagram.com/" target="_blank" aria-label="Instagram" class="share-icon">
      <svg viewBox="0 0 448 512"><path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9S160.5 370.8 224.1 370.8 339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.2 0-74.7-33.5-74.7-74.7S182.9 181.2 224.1 181.2s74.7 33.5 74.7 74.7-33.5 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.9-26.9 26.9s-26.9-12-26.9-26.9 12-26.9 26.9-26.9 26.9 12 26.9 26.9z"/></svg>
    </a>

    <!-- X -->
    <a href="https://twitter.com/share?url={{ shop.url }}{{ product.url }}" target="_blank" aria-label="X" class="share-icon">
      <svg viewBox="0 0 1200 1227"><path d="M714.6 548.7 1175 0H1070.8L668.5 488.3 349.6 0H0l479.8 708.7L0 1227h104.2l424.8-505.8L850.4 1227H1200L714.6 548.7Zm-149.8 178.4-49-70.4L134.5 90.3h151.3L599 528.6l49 70.5 409.7 587.6H1007L564.8 727.1Z"/></svg>
    </a>

    <!-- Pinterest -->
    <a href="https://pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}" target="_blank" aria-label="Pinterest" class="share-icon">
      <svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.43 2 11.92c0 3.94 2.47 7.31 5.96 8.58-.08-.73-.15-1.85.03-2.65.17-.72 1.11-4.67 1.11-4.67s-.28-.57-.28-1.4c0-1.3.75-2.27 1.69-2.27.8 0 1.19.6 1.19 1.31 0 .8-.51 2-0.76 3.12-.21.89.45 1.63 1.31 1.63 1.57 0 2.77-1.65 2.77-4.03 0-2.1-1.52-3.57-3.67-3.57-2.5 0-3.96 1.87-3.96 3.82 0 .75.28 1.56.63 2 .07.09.08.18.05.27-.06.29-.21.91-.24 1.04-.03.15-.13.19-.3.11-1.12-.52-1.8-2.14-1.8-3.45 0-2.82 2.06-5.42 5.93-5.42 3.11 0 5.54 2.23 5.54 5.2 0 3.1-1.96 5.61-4.66 5.61-.91 0-1.77-.48-2.07-1.05l-.57 2.18c-.2.77-.74 1.73-1.1 2.31.84.25 1.74.39 2.66.39 5.52 0 10-4.43 10-9.92S17.52 2 12 2z"/></svg>
    </a>

    <!-- Email -->
    <a href="mailto:?subject=Check this out&body={{ shop.url }}{{ product.url }}" aria-label="Email" class="share-icon">
      <svg viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4.01-8 4.99-8-5V6l8 5 8-5v2.01z"/></svg>
    </a>

  </div>
</div>

